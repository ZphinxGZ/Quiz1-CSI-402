@model Quiz_5070_Kunakorn.Models.UserViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-gradient bg-primary text-white">
                <h3 class="card-title mb-0 text-center">
                    <i class="bi bi-lock-fill"></i> เข้าสู่ระบบ
                </h3>
            </div>

            <div class="card-body">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="mb-3">
                        <label for="UserId" class="form-label">
                            <i class="bi bi-person-fill"></i> UserId
                        </label>
                        <input asp-for="UserId" class="form-control form-control-lg" placeholder="Enter your username" required />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">
                            <i class="bi bi-key-fill"></i> Password
                        </label>
                        <input asp-for="password" type="password" class="form-control form-control-lg" placeholder="Enter your password" required />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </form>

                <hr>

                <div class="text-muted text-center small">
                    <p class="mb-0">Demo User: user1 / pass123</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
    }

    .card-header {
        background: linear-gradient(135deg, #0d6efd, #0dcaf0) !important;
        border-radius: 0.75rem 0.75rem 0 0;
    }

    .form-control {
        border-radius: 0.375rem;
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn {
        border-radius: 0.375rem;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    @@media (max-width: 576px) {
        .col-md-6 {
            flex: 0 0 100%;
            max-width: 100%;
            padding: 1rem;
        }
    }
</style>
