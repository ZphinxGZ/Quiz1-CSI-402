@model List<Quiz_5070_Kunakorn.Models.StudentDetailsViewModel>
@{
    Layout = "_StudentLayout";
    ViewData["Title"] = "Student List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4 text-primary">
                <i class="bi bi-people"></i> รายชื่อนักศึกษา
            </h2>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ลำดับ</th>
                            <th>ชื่อ</th>
                            <th>นามสกุล</th>
                            <th>รหัสนักศึกษา</th>
                            <th>อายุ</th>
                            <th>อีเมล</th>
                            <th>เบอร์โทร</th>
                            <th>สาขา</th>
                            <th>ที่อยู่</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].FirstName</td>
                                    <td>@Model[i].LastName</td>
                                    <td><span class="badge bg-info">@Model[i].StudentId</span></td>
                                    <td>@Model[i].Age</td>
                                    <td>@Model[i].Email</td>
                                    <td>@Model[i].PhoneNumber</td>
                                    <td>@Model[i].Department</td>
                                    <td>@Model[i].Address</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">ไม่พบข้อมูลนักศึกษา</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <a asp-action="Login" asp-controller="Account" class="btn btn-secondary">ย้อนกลับ</a>
            </div>
        </div>
    </div>
</div>

<style>
    .table-responsive {
        border-radius: 0.375rem;
        border: 1px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(73, 80, 87, 0.02);
    }

    thead.table-dark th {
        border-bottom: 2px solid #495057;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    @@media (max-width: 768px) {
        .table {
            font-size: 0.85rem;
        }
        .badge {
            font-size: 0.75rem;
        }
    }
</style>
